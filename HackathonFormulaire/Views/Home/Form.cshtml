@model HackathonFormulaire.Models.FormViewModel;
@{
    ViewData["Title"] = "Roucarnage";
}

<div class="text-center">
    <h2 class="display-4">Etape 18 / 151 : </h2>

    <form asp-controller="Home"
          asp-action="ValidateForm"
          method="post"
          id="form">

        @*Nom*@

        <div class="mb-1">
            <label asp-for="Name" style="font-size:18px; font-weight: bold;">Nom: </label>
            <input id="nameId" asp-for="Name" type="text" class="form-control" oninput="UpdateName()" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div><br />

        @*Date de naissance*@
        <div>
            <label style="font-size:18px; font-weight: bold;">Date de naissance :</label>
            @*Heure avec bouton + - *@
            <div style="margin-bottom:5px; text-align:left;">
                <input type="button" value="+" style="width: 25px;" onclick="addHour()" />
                <input type="button" value="-" style="width: 25px;" onclick="subHour()" />
            </div>
            <div style="margin-bottom:15px; text-align:left;">
                <input id="hour" asp-for="Hour" readonly class="telTaille" style="width: 35px;" value="12" /> H
                <input id="minute" asp-for="Minute" readonly class="telTaille" style="width: 35px;" value="0" />

                <select asp-for="NameDay">
                    <option value="7">Dimanche</option>
                    <option value="2">Mardi</option>
                    <option value="4">Jeudi</option>
                    <option value="1">Lundi</option>
                    <option value="6">Samedi</option>
                    <option value="3">Mercredi</option>
                    <option value="5">Vendredi</option>
                </select>

                <select asp-for="Day1">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>

                <select asp-for="Day2">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                </select>

                <input type="text" asp-for="Month" placeholder="Mois" />

                <input type="number" readonly value="2000" style="width:60px;" /> +
                <input asp-for="Year" type="number" class="telTaille" placeholder="Année" style="width:60px;" />

            </div>
            <div>
                <span class="text-danger">@ViewBag.Errors</span>
                <span asp-validation-for="Month" class="text-danger"></span>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div><br />


        @*Adresse mail*@
        <div>
            <div style="text-align:center;">
                <label style="font-size:18px; font-weight: bold;">Adresse email:</label>
                <label> ( Nous avons oublié d'enregistrer votre adresse mail :'( )</label>
            </div>

            <input style="width: 49px; margin-left:150px;" asp-for="Email1" type="string" />
            <span asp-validation-for="Email1" class="text-danger"></span> <br />

            <select style="width: 78px;" asp-for="Separator1">
                <option value=".">.</option>
                <option value="-">-</option>
                <option value="_">_</option>
                <option value="=">=</option>
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">*</option>
                <option value="/">/</option>
                <option value="~">~</option>
                <option value="|">|</option>
                <option value=":">:</option>
                <option value=";">;</option>
                <option value=",">,</option>
                <option value="!">!</option>
                <option value="\">\</option>
                <option value=" "> </option>
                <option value=""></option>
            </select><br />

            <input style="width: 109px; margin-left:354px;" asp-for="Email2" type="string" /><br />

            <select style="width: 29px; margin-left:234px;" asp-for="Symbol">
                <option value=".">.</option>
                <option value="-">-</option>
                <option value="_">_</option>
                <option value="=">=</option>
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">*</option>
                <option value="/">/</option>
                <option value="~">~</option>
                <option value="|">|</option>
                <option value=":">:</option>
                <option value=";">;</option>
                <option value="@@">@@</option>
                <option value="!">!</option>
                <option value="\">\</option>
                <option value=" "> </option>
                <option value=""></option>
            </select>
            <span asp-validation-for="Symbol" class="text-danger"></span> <br />

            <input style="width: 52px; margin-left:157px;" asp-for="Email3" type="string" />
            <span asp-validation-for="Email3" class="text-danger"></span> <br />

            <select style="width: 64px; margin-left:512px;" asp-for="Separator2">
                <option value="*">*</option>
                <option value="-">-</option>
                <option value="_">_</option>
                <option value="=">=</option>
                <option value="+">+</option>
                <option value="-">-</option>
                <option value=".">.</option>
                <option value="/">/</option>
                <option value="~">~</option>
                <option value="|">|</option>
                <option value=":">:</option>
                <option value=";">;</option>
                <option value="@@">@@</option>
                <option value="!">!</option>
                <option value="\">\</option>
                <option value=" "> </option>
                <option value=""></option>
            </select>
            <span asp-validation-for="Separator2" class="text-danger"></span> <br />

            <input style="width: 90px; margin-left:0px;" asp-for="Email4" type="string" value="com" />
            <span asp-validation-for="Email4" class="text-danger"></span>
            <br /><br />
        </div><br />

        @*Tel*@
