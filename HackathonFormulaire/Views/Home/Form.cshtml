                    <input class="telTaille" style="width:15px;" asp-for="Tel3" id="telO3" type="number" maxlength="1" readonly />
                </div>
                <div class="DivNbTel">
                    <input class="telTaille" style="width:16px;" id="telI4" type="number" maxlength="4" onchange="binary(4)" /><br />
                    <input class="telTaille" style="width:32px;" asp-for="Tel4" id="telO4" type="number" maxlength="1" readonly />
                </div>
                <div class="DivNbTel">
                    <input class="telTaille" style="width:58px;" id="telI5" type="number" maxlength="4" onchange="binary(5)" /><br />
                    <input class="telTaille" style="width:16px;" asp-for="Tel5" id="telO5" type="number" maxlength="1" readonly />
                </div>
                <div class="DivNbTel">
