                    <input class="telTaille" style="width:18px;" asp-for="Tel6" id="telO6" type="number" maxlength="1" readonly />
                </div>
                <div class="DivNbTel">
                    <input class="telTaille" style="width:18px;" id="telI7" type="number" maxlength="4" onchange="binary(7)" /><br />
                    <input class="telTaille" style="width:26px;" asp-for="Tel7" id="telO7" type="number" maxlength="1" readonly />
                </div>
                <div class="DivNbTel">
                    <input class="telTaille" style="width:21px;" id="telI8" type="number" maxlength="4" onchange="binary(8)" /><br />
                    <input class="telTaille" style="width:53px;" asp-for="Tel8" id="telO8" type="number" maxlength="1" readonly />
                </div>
                <div class="DivNbTel">
                    <input class="telTaille" style="width:32px;" id="telI9" type="number" maxlength="4" onchange="binary(9)" /><br />
                    <input class="telTaille" style="width:12px;" asp-for="Tel9" id="telO9" type="number" maxlength="1" readonly />
                </div>
                <div class="DivNbTel">
                    <input class="telTaille" style="width:69px;" id="telI10" type="number" maxlength="4" onchange="binary(10)" /><br />
                    <input class="telTaille" style="width:51px;" asp-for="Tel10" id="telO10" type="number" maxlength="1" readonly />
                </div>

            </div>

            @if (ViewBag.TelError)
            {
                <span asp-validation-for="Tel1" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel2" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel3" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel4" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel5" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel6" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel7" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel8" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel9" class="text-danger"></span>
                <br />
                <span asp-validation-for="Tel10" class="text-danger"></span>
                <br />
            }
        </div><br />

        @*Mot de passe*@
        <div>
            <div class="mb-3">
                <div id="Password" class="mb-3">
                    <label style="font-size:18px; font-weight: bold;">Mot de passe:</label>
                    <input class="inputP" id="1" type="text" maxlength="1" onchange="updateValue(1)" asp-for="FirstPassword" />
                    <input class="inputP" id="2" type="text" maxlength="1" onchange="updateValue(2)" />
                    <input class="inputP" id="3" type="text" maxlength="1" onchange="updateValue(3)" />
                    <input class="inputP" id="4" type="text" maxlength="1" onchange="updateValue(4)" />
                    <input class="inputP" id="5" type="text" maxlength="1" onchange="updateValue(5)" />
                    <input class="inputP" id="6" type="text" maxlength="1" onchange="updateValue(6)" />
                </div>
                <input type="button" onclick="AddPasswordInput()" value="-">
                <input type="button" onclick="  RemovePasswordInput()" value="+">
                <span asp-validation-for="FirstPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password">Confirmation du mot de passe: </label>
                <input asp-for="Password" type="text" placeholder="*********" class="form-control" onchange="updateConfPassword1()" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3" id="conf2">
                <label asp-for="ConfirmPassword">Confirmation du mot de passe: </label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirmation du mot de passe" class="form-control" onchange="updateConfPassword2()" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3" id="conf3">
                <label asp-for="ConfirmPassword2">Confirmation du mot de passe: </label>
                <input asp-for="ConfirmPassword2" type="password" placeholder="Confirmation du mot de passe encore" class="form-control" onchange="updateConfPassword3()" />
                <span asp-validation-for="ConfirmPassword2" class="text-danger"></span>
            </div>
        </div>


        <input type="submit" value="Valider" />

    </form>
</div>


